            */
        %> -->
        <!-- <img src="imageUrl" alt="Product" class="product-image"> -->

        <!-- <% productImages.forEach(image => { %> -->
            
        <!-- <% }) %> -->
    </main>

    <% products.forEach(product => { %>
        <% if (product.DeviceStock > 0) { %>
            <main id="products-container" class="px-3 d-flex justify-content-center align-items-center flex-wrap" style="height: calc(200vh - 120px);">
                <div class="iot-product">
                    <img src="https://m.media-amazon.com/images/I/71r5Lm1aO1L.jpg" class="product-image" alt="Product"/>
                    <h2 class="product-name"><%= product.DeviceName %></h2>
                    <p class="product-description">Manufacturer: <%= product.DeviceManufacturer %></p>
                    <h4 class="product-price">Price: <%= product.DevicePrice %></h4>
                    <h5 class="product-quantity">Quantity: <%= product.DeviceStock %></h5>
                    <!-- <button class="add-to-cart btn btn-primary">Add to Cart</button> -->
                    <form action="/addToCart" method="post">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <input type="number" name="quantity" value="1" min="1">
                        <button class="add-to-cart btn btn-primary" type="submit">Add to Cart</button>
                    </form>
                </div>
            </main>
        <% } %>
    <% }) %>
</div>

</body>
</html>
