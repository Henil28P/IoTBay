<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="shortcut icon" type="image/png" href="https://www.pngkey.com/png/detail/18-182164_website-symbol-png-clip-art-black-and-white.png">

    <style>
        body {
            background: url(https://images.unsplash.com/photo-1538947117537-48239ec91f18?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);
            background-size: cover;
            background-position: center;
        }

        input[input=text] {
            width: 100%;
            padding: 12px 20px;
            box-sizing: border-box;
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 10px;
        }

        .add-to-cart {
            position: absolute;
            bottom: 10px;
            width: 110px;
            left: 50%;
            transform: translateX(-50%);
        }

        .header {
            background-color: white;
            width: 100%;
            padding: 10px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .container {
            margin-top: -40px; 
        }

        .search-icon {
            width: 30px; 
            height: auto; 
            margin-left: 5px; 
            margin-right: 15px;
        }

        .custom-btn {
            width: 90px; 
            margin-right: 10px; 
        }

        .logout-container {
            display: flex;
            align-items: center;
        }

        .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.9) !important;
            backdrop-filter: saturate(200%) blur(25px);
        }
        
        .text-dark-blue {
            color: #1a237e;
        }
        
        .shift-right {
            padding-left: 80px;
        }
        
        .move-up {
            margin-top: -40px; 
        }
        .shift-up{
            padding-bottom: 50px;
        }

        .left{
            float:left;
        }
          
        .clear{
            clear:both;
        }

    </style>

</head>
<body class="d-flex h-100 text-center text-white bg-white">
<div class="container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
        <div class="header">
            <div>
                <!-- Logo -->
                <img src="https://i.postimg.cc/wvZDbKXP/Io-TBay-Black.png" border="0" alt="Iot-Bay-white" width="120"/>
            </div>
            <h1 class="text-dark" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">Hello </h1>
            <div class="nav">
                <!-- Buttons -->
                <a class="nav-link" href="#">Browse Catalogue</a>
                <a class="nav-link" href="#">Orders</a>
                <div class="d-flex align-items-center">
                    <a class="nav-link" href="#">Search</a>
                    <img src="https://cdn-icons-png.flaticon.com/512/263/263142.png" alt="Search Icon" class="search-icon">
                </div>
                <div class="logout-container">
                    <form action="/logout?_method=DELETE" method="POST">
                        <button class="nav-link fw-bold py-1 px-0 btn p=3 btn-primary text-white custom-btn" type="submit">Logout</button>
                    </form>
                </div>
            </div>
        </div>
        
    </header>
    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">

        <div class="col-lg-6 mb-5 mb-lg-0 position-center">
            <div class="card bg-glass">
            <div class="card-body px-4 py-5 px-md-5">
                <form action="/viewshipment" method="POST">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row">
                    <% if (messages.error) { %>
                    <div class="alert alert-danger">
                        <strong><%= messages.error %> </strong>
                    </div>
                    <% } %> 
                    <h1 class="mb-3 h3 text-dark-blue">Shipment Details</h1>
                </div>

                <!-- Address input -->
                <div class="form-outline mb-4 text-center">
                    <label class="form-label text-dark-blue" for="homeAddressTextbox">Address</label>
                    <input type="text" readonly ="address1" id="address1" class="form-control" placeholder="Address 1"/>
                    <input type="text" readonly ="address2" id="address2" class="form-control" placeholder="Address 2"/>
                    <div style="float:left;">
                        <input type="text" readonly name="postal" id="postalCode" class="form-control" placeholder="Postal Code/Zip Code"/>
                    </div>
                    <div style="float:left;">
                        <input type="text" readonly name="city" id="city" class="form-control" placeholder="City" />
                    </div>
                </div>
                <div class="clear">&nbsp;</div>
                
                <div class="text-center text-dark-blue">
                    <!-- Save button -->
                    <button type="submit" id='submit' class="btn btn-primary btn-block mb-4">Add shipment details</button>

                <!-- </div> -->
                
                </form>
            </div>
            </div>
        </div>
    </div>
    
</div>

<script>
    fetch('/shipmentdetails')
    .then(response => response.json())
        .then(shipment_details => {
            if (shipment_details){
                document.getElementById('address1').placeholder = shipment_details['address1'];
                document.getElementById('address2').placeholder = shipment_details['address2'];
                document.getElementById('postalCode').placeholder = shipment_details['postalCode'];
                document.getElementById('city').placeholder = shipment_details['city'];
                document.getElementById('submit').textContent = 'Change shipment details';
            }

        })
        .catch((error) => {
            console.log(error)
        });
    
</script>
</body>
</html>
